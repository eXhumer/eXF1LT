{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "jsx": "react-jsx",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./dist/",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/"]
}
